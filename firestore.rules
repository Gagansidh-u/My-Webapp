rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /orders/{orderId} {
      // Users can create orders for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Users can read their own orders. Admins can read any order.
      allow get: if request.auth != null && (resource.data.userId == request.auth.uid);
      
      // Admins (any authenticated user) can list and update orders.
      allow list, update: if request.auth != null;
    }

    match /contacts/{contactId} {
      // Anyone can create a contact message
      allow create: if true;
      
      // Admins (any authenticated user) can manage contact messages
      allow read, update, delete: if request.auth != null;
    }
  }
}
