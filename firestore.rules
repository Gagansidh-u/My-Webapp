rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the admin
    function isAdmin() {
      return request.auth.token.email == 'helpdesk.grock@outlook.com';
    }

    // Users can create their own user document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      // Admin can read all user data
      allow list: if isAdmin();
    }
    
    // Orders collection
    match /orders/{orderId} {
        // Users can create their own orders
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
        // Users can read their own orders
        allow get: if request.auth != null && request.auth.uid == resource.data.userId;
        // Admin can read and update all orders
        allow list, update: if isAdmin();
    }
    
    // Contacts (Inquiries) collection
    match /contacts/{contactId} {
        // Users can create their own inquiries
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
        // Users can read and delete their own inquiries
        allow get, delete: if request.auth != null && request.auth.uid == resource.data.userId;
        // Admin can read and update all inquiries
        allow list, update: if isAdmin();
    }
  }
}
