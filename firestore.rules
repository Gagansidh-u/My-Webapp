rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /orders/{orderId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.token.email == 'helpdesk.grock@outlook.com';
    }
    match /contacts/{contactId} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.email == 'helpdesk.grock@outlook.com');
      allow update: if request.auth != null && request.auth.token.email == 'helpdesk.grock@outlook.com';
    }
  }
}
