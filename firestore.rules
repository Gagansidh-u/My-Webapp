{
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "contacts": {
      ".indexOn": ["userId"],
      "$inquiryId": {
        ".read": "auth != null && (data.child('userId').val() === auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() === true)",
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['userId', 'name', 'email', 'subject', 'messages', 'status', 'createdAt'])"
      }
    },
    "orders": {
      ".indexOn": ["userId"],
      "$orderId": {
        ".read": "auth != null && (data.child('userId').val() === auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() === true)",
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['userId', 'userEmail', 'plan', 'price', 'status', 'createdAt'])"
      }
    }
  }
}
