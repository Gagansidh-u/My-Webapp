rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow admin to read all orders, but only authenticated users to create them.
    match /orders/{orderId} {
      allow read: if true; // In a real-world app, you'd check for an admin claim here.
      allow write: if request.auth != null;
    }

    // Allow users to only manage their own documents in other collections
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
