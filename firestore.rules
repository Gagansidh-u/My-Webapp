
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Rules for the 'orders' collection
    match /orders/{orderId} {
      // Admins can read and write any order
      allow read, write: if isAdmin();
      
      // Users can create their own orders
      allow create: if request.auth != null;
      
      // Users can only read, update, or delete their own orders
      allow update, delete: if request.auth.uid == resource.data.userId;
      allow read: if request.auth.uid == resource.data.userId;
    }

    // Rules for the 'contacts' collection
    match /contacts/{contactId} {
      // Admins can read and write any contact message
      allow read, write: if isAdmin();
      
      // Any user (authenticated or not) can create a contact message
      allow create: if true;

      // Authenticated users can only read, update or delete their own contact messages
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
