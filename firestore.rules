
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for Admin
    function isAdmin() {
      return request.auth.token.email == 'helpdesk.grock@outlook.com';
    }

    match /contacts/{contactId} {
      // ANYONE can create a contact message (for the contact form)
      allow create;

      // Users can read/delete their own messages.
      // Admin can read/delete ANY message.
      allow read, delete: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());

      // Only Admin can update a message's status
      allow update: if isAdmin();
    }

    match /orders/{orderId} {
      // Logged-in users can create orders
      allow create: if request.auth != null;

      // Users can read their own orders.
      // Admin can read ANY order.
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      
      // Only Admin can update an order's status
      allow update: if isAdmin();

      // No one can delete orders for now
      allow delete: if false;
    }
  }
}
