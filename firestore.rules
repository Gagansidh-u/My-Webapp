
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for the 'orders' collection
    match /orders/{orderId} {
      // Allow any authenticated user to create an order
      allow create: if isAuthenticated();
      
      // Allow a user to read their own order
      allow get: if isAuthenticated() && isOwner(resource.data.userId);

      // Allow any authenticated user (for the admin panel) to list, update, and delete orders
      allow list, update, delete: if isAuthenticated();
    }

    // Rules for the 'contacts' collection
    match /contacts/{contactId} {
      // Allow anyone to create a contact message (from the contact form)
      allow create: if true;
      
      // Allow any authenticated user (for the admin panel) to manage all contact messages
      allow read, update, delete: if isAuthenticated();
    }
    
    // Default deny all other collections/paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
