
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin credentials.
    // In this simple setup, any authenticated user can perform admin actions.
    function isAdmin() {
      return request.auth != null;
    }

    match /orders/{documentId} {
      // Allow users to create their own orders.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow users to read their own orders.
      allow get: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow admins to read, update, and delete any order.
      allow list, update, delete: if isAdmin();
    }

    match /contacts/{documentId} {
      // Allow anyone to create a contact message.
      allow create: if true;
      // Allow admins to manage contact messages.
      allow read, update, delete: if isAdmin();
    }
  }
}
