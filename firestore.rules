
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /orders/{orderId} {
      // Allow admin (any authenticated user) to list and update orders.
      allow list, update: if request.auth != null;
      // Allow users to create orders and read their own orders.
      allow create, get: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /contacts/{contactId} {
        // Allow admin (any authenticated user) to manage messages.
        allow read, update, delete: if request.auth != null;
        // Allow any user (authenticated or not) to create a message.
        allow create: if true;
    }
  }
}
