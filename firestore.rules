rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin user can read and write all orders and contacts
    match /{collection}/{docId} {
      allow read, write: if request.auth.token.email == 'helpdesk.grock@outlook.com';
    }

    // Rules for the 'orders' collection
    match /orders/{orderId} {
      // Allow users to create orders if they are authenticated
      allow create: if request.auth.uid != null;
      // Allow users to read, update, or delete their own orders
      allow read, update, delete: if request.auth.uid == resource.data.userId;
    }

    // Rules for the 'contacts' collection
    match /contacts/{contactId} {
      // Allow anyone to create a contact message (for the contact form)
      allow create: if true;
      // Allow authenticated users to read, update, or delete their own inquiries
      allow read, update, delete: if resource.data.userId != null && request.auth.uid == resource.data.userId;
    }
  }
}
