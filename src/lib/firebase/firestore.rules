rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all collections.
    match /{document=**} {
      allow read: if true;
    }

    // Allow public write access to the 'blog_images' collection.
    // This is needed for the AI image generation feature.
    match /blog_images/{slug} {
      allow write: if true;
    }

    // Allow logged-in users to create contacts and orders.
    match /contacts/{contactId} {
      allow create: if request.auth != null;
    }
    match /orders/{orderId} {
      allow create: if request.auth != null;
    }
  }
}
