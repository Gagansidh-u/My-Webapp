
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is the admin
    function isAdmin() {
      return request.auth.token.email == "helpdesk.grock@outlook.com";
    }
    
    // Rules for the users collection
    match /users/{userId} {
      // Allow users to read and write their own data
      // Allow admin to read and write any user's data
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
    
    // Rules for the orders collection
    match /orders/{orderId} {
        // Allow users to create their own orders
        allow create: if request.auth.uid == request.resource.data.userId;
        // Allow users to read their own orders
        // Allow admin to read all orders
        allow read: if request.auth.uid == resource.data.userId || isAdmin();
        // Allow admin to update any order
        allow update: if isAdmin();
    }

    // Rules for the contacts collection
    match /contacts/{contactId} {
        // Allow authenticated users to create contacts
        allow create: if request.auth != null;
        // Allow users to read their own contacts
        // Allow admin to read all contacts
        allow read: if request.auth.uid == resource.data.userId || isAdmin();
        // Allow admin to update any contact (for changing status)
        allow update: if isAdmin();
        // Allow users to delete their own contacts
        // Allow admin to delete any contact
        allow delete: if request.auth.uid == resource.data.userId || isAdmin();
    }
  }
}
